<div class="panel panel-info">
    <div class="panel-heading">
        <h2>
            {{#link-to 'vendas' active=false}}<i class="fa fa-angle-left"></i>{{/link-to}}
            <i class="fa fa-building-o"></i>
            {{#if model.isNew}}
                Nova Venda
            {{else}}
                Editar Venda
            {{/if}}
        </h2>
    </div>
    <div class="panel-body">
		{{#bs-form model=model action="submit" as |form|}}
            <div class="row">
				<div class="col-sm-12">
					{{form.element label="dataCompra" placeholder="Nome" property="nome"}}
				</div>
            </div>
            <div class="row">
				<div class="col-sm-6">
					{{form.element label="Telefone" placeholder="Telefone" property="telefone"}}
				</div>
				<div class="col-sm-6">
					{{form.element label="E-mail" placeholder="E-mail" property="email"}}
				</div>
            </div>
            <div class="row">
				<div class="col-sm-12">
                    {{form.element label="Endereço" placeholder="Endereço" property="endereco"}}
                </div>
            </div>
            <div class="row">
				<div class="col-sm-12">
                    {{form.element controlType="textarea" label="Descrição" placeholder="Descrição" property="descricao"}}
                </div>
            </div>
        {{/bs-form}}
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-sm-12 text-right">
                <button class="btn btn-success" {{action "submit"}}>Salvar</button>
            </div>
        </div>
    </div>
</div>